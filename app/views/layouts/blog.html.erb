<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords %>" />

    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render 'layouts/shared/application_nav' %>

    <!-- start of blog header -->
    <br>
    <%= render 'layouts/shared/blog_header' %>
    <!-- end of blog header -->

    <div class="container">
      <div class="row">

        <%= yield %>

        <%= render 'layouts/shared/blog_sidebar' %>

      </div>

        <!-- start of footer -->
        <%= render 'layouts/shared/blog_footer' %>
        <!-- end of footer -->

        <%= source_helper("blog") %>
    </div>
  </body>
</html>
