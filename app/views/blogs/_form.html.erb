<%= form_for(blog) do |form| %>
   <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter the Title...' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control', rows: 9, placeholder: 'Enter the Content here...' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-primary form-submit'%>
    <%= link_to 'Back', blogs_path, class: 'btn btn-primary form-back' %>
  </div>

<% end %>